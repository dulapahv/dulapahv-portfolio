{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "content-collections.ts"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "content/**"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "RESEND_API_KEY",
        "SPOTIFY_CLIENT_ID",
        "SPOTIFY_CLIENT_SECRET",
        "SPOTIFY_ACCESS_TOKEN",
        "SPOTIFY_REFRESH_TOKEN"
      ],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint:check": {
      "inputs": ["$TURBO_DEFAULT$", "!content/**"],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "inputs": ["$TURBO_DEFAULT$", "!content/**"],
      "outputs": [],
      "cache": true
    },
    "format:check": {
      "inputs": ["$TURBO_DEFAULT$", "!content/**"],
      "outputs": [],
      "cache": true
    },
    "format:fix": {
      "inputs": ["$TURBO_DEFAULT$", "!content/**"],
      "outputs": [],
      "cache": true
    }
  }
}
